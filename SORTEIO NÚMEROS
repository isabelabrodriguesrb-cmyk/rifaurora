<body>
  <div class="card" role="main">
    <h1>Sorteio Números</h1>
    <p class="lead">Escolha o intervalo (ex: 1 a 100) e clique em Sortear.</p>

    <div class="row" aria-label="intervalo">
      <label>
        <input id="min" type="number" value="1" min="0" />
      </label>
      <label>
        <input id="max" type="number" value="100" min="0" />
      </label>
    </div>

    <button id="btnSort">Sortear</button>

    <div id="countdown" aria-live="polite" style="display:none"></div>

    <div id="result" role="status"></div>

    <div class="small">Os resultados neste site são fixos para fins de estudo.</div>
  </div>

  <script>
    (function(){
      const btn = document.getElementById('btnSort');
      const cd = document.getElementById('countdown');
      const res = document.getElementById('result');

      function showCountdown(){
        cd.style.display = 'block';
        cd.innerHTML = ''; // limpar
        // vertical: cada número em linha
        const numbers = [5,4,3,2,1];
        let i = 0;
        return new Promise(resolve => {
          const t = setInterval(() => {
            if(i < numbers.length){
              cd.innerHTML = numbers[i];
              i++;
            } else {
              clearInterval(t);
              cd.style.display = 'none';
              resolve();
            }
          }, 800); // 800ms entre números
        });
      }

      btn.addEventListener('click', async () => {
        res.style.display = 'none';
        res.innerHTML = '';
        const min = Number(document.getElementById('min').value);
        const max = Number(document.getElementById('max').value);
        if (!Number.isFinite(min) || !Number.isFinite(max) || min>=max){
          alert('Digite um intervalo válido (min < max).');
          return;
        }

        // Mostra contagem vertical
        await showCountdown();

        // Exibe resultado fixo (para estudo)
        const numero1 = 20;
        const numero2 = 59;
        res.innerHTML = `Os números sorteados foram: <strong>${numero1}</strong> e <strong>${numero2}</strong><br>Parabéns aos participantes!<br>O ganhador deve entrar em contato.`;
        res.style.display = 'block';
      });
    })();
  </script>
</body>
