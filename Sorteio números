#include <iostream>
#include <cstdlib>
#include <thread>
#include <chrono>

using namespace std;

// Simulação de atraso
void esperar(int milissegundos) {
    this_thread::sleep_for(chrono::milliseconds(milissegundos));
}

int main() {
    int inicio, fim;

    cout << "Digite o intervalo para o sorteio.\n";
    cout << "Número inicial: ";
    cin >> inicio;
    cout << "Número final: ";
    cin >> fim;

    cout << "\nSorteando número de " << inicio << " a " << fim << "...\n\n";
    esperar(700);

    cout << "Iniciando contagem regressiva!\n\n";
    esperar(800);

    // Contagem regressiva vertical
    for (int i = 5; i >= 1; i--) {
        cout << i << endl;
        esperar(700);
    }

    esperar(1000);

    int numero1 = 20;
    int numero2 = 59;

    cout << "\nOs números sorteados foram:\n";
    cout << numero1 << " e " << numero2 << "\n\n";
    esperar(800);

    cout << "Parabéns a todos os participantes!\n";
    cout << "O ganhador dos números deve entrar em contato.\n";

    return 0;
}
